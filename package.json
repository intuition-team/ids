{
  "name": "@intuition.team/wds",
  "version": "0.1.3",
  "description": "Winvestor Design System",
  "author": {
    "name": "Intuition Design Bureau",
    "url": "https://intuition.team",
    "email": "e@intuition.team"
  },
  "license": "LGPL-2.1-only",
  "repository": "https://github.com/intuition-team/wds.git",
  "main": "wds.scss",
  "scripts": {
    "build": "yarn build-wds && yarn build-brandbook",
    "build-wds": "yarn build-sass && yarn build-autoprefix && yarn build-cleancss",
    "build-brandbook": "(cd brandbook && yarn build)",
    "build-autoprefix": "postcss --use autoprefixer --map false --output dist/wds.css dist/wds.css",
    "build-cleancss": "cleancss -o dist/wds.min.css dist/wds.css",
    "build-sass": "node-sass --output-style expanded --source-map true wds.scss dist/wds.css",
    "clean": "rimraf dist",
    "dev": "yarn build-sass -- --watch",
    "start": "(cd brandbook && yarn start)"
  },
  "dependencies": {
    "normalize.css": "^8.0.1"
  },
  "devDependencies": {
    "autoprefixer": "^9.8.0",
    "clean-css-cli": "^4.3.0",
    "node-sass": "^4.14.1",
    "postcss-cli": "^7.1.1",
    "rimraf": "^3.0.2"
  },
  "files": [
    "dist",
    "lib",
    "node_modules/normalize.css"
  ]
}
