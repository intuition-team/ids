extends pages/layouts/main.pug

block header 
  include pages/partials/design-header.pug

block content
  //- .plug
  
  //- .wds__label Найти деньги
  .wds__wrapper
    .wds__text
      .wds__section
        h1 Компоненты
      .wds__stack-XXS

      .wds__section
        h3 Кнопка
        .wds__grid.wds__grid-size-M.wds__grid-inset-L
          .wds__grid-cell
            p default
            button Кликни меня
          .wds__grid-cell
            p disabled
            button(disabled) Кликни меня

        h3 Кнопка-ссылка
        .wds__grid.wds__grid-size-M.wds__grid-inset-L
          .wds__grid-cell
            p default
            a.wds__button-link(href="/components-test.pug") Кликни меня
          .wds__grid-cell
            p disabled
            a.wds__button-link(href="/components-test.pug" disabled) Кликни меня

        h3 Инпут
        .wds__grid.wds__grid-size-XL.wds__grid-inset-L
          .wds__grid-cell
            p default
            input(type='text' placeholder='Введи сюда свой текст')
          .wds__grid-cell
            p disabled
            input(type='text' placeholder='Введи сюда свой текст' disabled)

        h3 Текстовая зона
        .wds__grid.wds__grid-size-XL.wds__grid-inset-L
          .wds__grid-cell
            p default
            textarea(type='text' placeholder='Введи сюда свой текст')
          .wds__grid-cell
            p disabled
            textarea(type='text' placeholder='Введи сюда свой текст' disabled)
        
        h3 Инпут вариант 2
        .wds__grid.wds__grid-size-XL.wds__grid-inset-L
          .wds__grid-cell
            p default
            input.option2(type='text' placeholder='Введи сюда свой текст')
          .wds__grid-cell
            p disabled
            input.option2(type='text' placeholder='Введи сюда свой текст' disabled)

        h3 Текстовая зона вариант 2
        .wds__grid.wds__grid-size-XL.wds__grid-inset-L
          .wds__grid-cell
            p default
            textarea.option2(type='text' placeholder='Введи сюда свой текст')
          .wds__grid-cell
            p disabled
            textarea.option2(type='text' placeholder='Введи сюда свой текст' disabled)

        h3 Чекбокс
        .wds__grid.wds__grid-size-M.wds__grid-inset-L
          .wds__grid-cell
            p default
            input(type='checkbox' id='email-login')
            label(for='email-login') Выбери меня
          .wds__grid-cell
            p checked
            input(type='checkbox' id='email-login' checked)
            label(for='email-login') Выбери меня
          .wds__grid-cell
            p disabled
            input(type='checkbox' id='email-login' disabled)
            label(for='email-login') Выбери меня
          .wds__grid-cell
            p disabled checked
            input(type='checkbox' id='email-login' checked disabled)
            label(for='email-login') Выбери меня

        h3 Радиокнопка
        .wds__grid.wds__grid-size-M.wds__grid-inset-L
          .wds__grid-cell
            p default
            input(type='radio' id='email-login')
            label(for='email-login') Выбери меня
          .wds__grid-cell
            p checked
            input(type='radio' id='email-login' checked)
            label(for='email-login') Выбери меня
          .wds__grid-cell
            p disabled
            input(type='radio' id='email-login' disabled)
            label(for='email-login') Выбери меня
          .wds__grid-cell
            p disabled checked
            input(type='radio' id='email-login' checked disabled)
            label(for='email-login') Выбери меня
        
        h3 Таблица
        table
          tr 
            th Список публикаций
          tr 
            td Название публикации
          tr 
            td Название публикации
          tr 
            td Название публикации
  .plug
